<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学没学"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <RadioGroup
        android:id="@+id/roleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/btnTeacher"
            android:text="@string/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/btnStudent"
            android:text="@string/student"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:autofillHints="@string/email_hint"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/etTeacherId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/teacher_id_hint"
        android:visibility="gone"
        android:inputType="text"
        android:autofillHints="@string/teacher_id_hint"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/etStudentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/student_id_hint"
        android:visibility="gone"
        android:inputType="text"
        android:autofillHints="@string/student_id_hint"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:visibility="gone"
        android:autofillHints="@string/password_hint"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/etClassCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/class_code_hint"
        android:visibility="gone"
        android:inputType="number"
        android:autofillHints="@string/class_code_hint"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button_text"
        android:background="@drawable/button_background"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:onClick="login"
        android:padding="16dp" />
</LinearLayout>